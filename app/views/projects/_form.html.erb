<% @project.tags.build %>
<%= form_for(@project) do |post_form| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= post_form.label :name %><br />
    <%= post_form.text_field :name %>
  </div>
  <div class="field">
    <%= post_form.label :title %><br />
    <%= post_form.text_field :title %>
  </div>
  <div class="field">
    <%= post_form.label :description %><br />
    <%= post_form.text_area :description %>
  </div>
  <div class="field">
    <%= post_form.label :date %><br />
    <%= post_form.date_select :date %>
  </div>
  <div class="field">
    <h2>Tags</h2>
    <%= render :partial => 'tags/form', :locals => { :form => post_form} %>
  </div>
  <div class="actions">
    <%= post_form.submit %>
  </div>
<% end %>
